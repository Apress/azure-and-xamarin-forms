<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BookPollClientApp.ResultsPage"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Results Page">

    <StackLayout Margin="10" Spacing="20">
        <Label FontSize="Medium" Text="{Binding Question}" />

        <ListView ItemsSource="{Binding Answers}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding Item1, StringFormat='{0} says:'}" 
                              Detail="{Binding Item2}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>